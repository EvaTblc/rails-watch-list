<div class="container">

<div class="card-category mt-2">
<h1>All the lists</h1>
</div>

<% @lists.each do |list| %>
  <%= link_to list_path(list) do %>
    <div class="card-product mt-2">
      <% if list.photo.attached? %>
        <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
      <% end %>
      <div class="card-product-infos">
        <h2><%= list.name %></h2>
      </div>
    </div>
  <% end %>
<% end %>

<a class="btn btn-gradient m-2" href="lists/new">Add list</a>
</div>
